---
import type { Work } from "@/data/works";
import { Image } from "astro:assets";
import type { Code } from "astro:components";

type Props = Work & { link?: string };

const {
  title,
  icon,
  summary,
  roles: rolesRaw = [],
  stacks,
  startDate,
  endDate,
} = Astro.props;

// Date | string => string
const getDateString = (date: Date | string): string =>
  typeof date === "string" ? date : date.toDateString();

const dateString = [startDate, endDate]
  .filter(Boolean)
  .map((it) => getDateString(it!))
  .join(" â€” ");

const roles = Array.isArray(rolesRaw) ? rolesRaw : [rolesRaw];
---

<div class="work-card pressable pressable--pers">
  {/* Head */}
  <div class="work-card__head">
    <h3 class="work-card__title">
      <>
        {
          icon && (
            <span class="work-card__icon">
              {typeof icon === "string" ? (
                icon
              ) : (
                <Image src={icon} alt={title || ""} width={24} height={24} />
              )}
            </span>
          )
        }
        <span>{title}</span>
      </>
    </h3>
    <div class="work-card__subdata">
      <div class="work-card__date">{dateString}</div>
      <div class="work-card__roles">
        {roles.map((role) => <span>{role}</span>)}
      </div>
    </div>
  </div>
  <div class="work-card__body"></div>
  {/* Handle Icon */}
</div>

<style lang="scss">
  @use "color";
  @use "mixin";
  @use "media";

  .work-card {
    border-radius: 0.25rem;
    background: color.primary(1);
    border: solid 1px color.primary(5);

    $left-inset: calc(1.5rem + 0.5rem);

    &__head {
      padding: 1rem;
    }

    &__title {
      position: relative;
      padding-left: $left-inset;
      font-weight: bold;
      font-size: 1.125rem;
      line-height: 1.5rem;
    }

    &__icon {
      position: absolute;
      top: 0;
      left: 0;
      display: inline-block;
      width: 1.5rem;
      height: 1.5rem;
      line-height: 1.5rem;
      text-align: center;
      vertical-align: baseline;
    }

    &__subdata {
      margin-top: 0.5rem;
      padding-left: $left-inset;
    }

    &__date {
      font-size: 0.875rem;
      color: color.primary(11);
    }

    &__roles {
      display: flex;
      flex-flow: row;
      gap: 0.5rem;
      font-size: 0.875rem;
      color: color.primary(11);
    }

    //

    
  }
</style>
