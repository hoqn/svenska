---
import ScaffoldLayout from './ScaffoldLayout.astro';
// import PostList from '@/components/post/PostList';
import PostList from '@/components/post/post-list.astro';
import PostTypes from '@/components/post/post-types.astro';

import PostOptions from "@/data/post.options";

import type { CollectionEntry } from "astro:content";
import ListScaffoldLayout from './ListScaffoldLayout.astro';

const { showTypes } = PostOptions;

export interface Props {
  posts: CollectionEntry<'posts'>[]
  currentShowType?: typeof showTypes[number]['key'];
}

const { currentShowType: currentTypeCode, posts } = Astro.props;
---

<ListScaffoldLayout currentShowType="post">
  <PostList {posts}/>
</ListScaffoldLayout>